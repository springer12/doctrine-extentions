{
  "name": "core23/doctrine-extensions",
  "type": "library",
  "description": "Useful doctrine event hooks.",
  "keywords": [
    "doctrine",
    "hooks",
    "symfony",
    "symfony-bridge",
    "confirmable",
    "deletable",
    "lifecycle",
    "sortable"
  ],
  "homepage": "https://core23.de",
  "license": "MIT",
  "authors": [
    {
      "name": "Christian Gripp",
      "email": "mail@core23.de"
    }
  ],
  "require": {
    "php": "^7.2",
    "doctrine/common": "^2.8",
    "doctrine/dbal": "^2.6",
    "doctrine/event-manager": "^1.0",
    "doctrine/orm": "^2.5",
    "sonata-project/doctrine-extensions": "^1.3.1",
    "symfony/property-access": "^4.2 || ^5.0"
  },
  "conflict": {
    "symfony/framework-bundle": "<4.2"
  },
  "require-dev": {
    "bamarni/composer-bin-plugin": "^1.3",
    "localheinz/composer-normalize": "^1.3",
    "symfony/dependency-injection": "^4.2 || ^5.0",
    "symfony/expression-language": "^4.2 || ^5.0",
    "symfony/framework-bundle": "^4.2 || ^5.0"
  },
  "suggest": {
    "symfony/framework-bundle": "If you want to use symfony"
  },
  "config": {
    "sort-packages": true
  },
  "extra": {
    "branch-alias": {
      "dev-master": "3.x-dev"
    }
  },
  "autoload": {
    "psr-4": {
      "Core23\\Doctrine\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Core23\\Doctrine\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "@composer bin all install --ansi"
    ],
    "post-update-cmd": [
      "@composer bin all update --ansi"
    ]
  }
}
